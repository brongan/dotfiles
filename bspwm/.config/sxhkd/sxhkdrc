#
# wm independent hotkeys
#

# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + space
	rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
	dunstify -u medium "Reloading sxhkd config"; pkill -USR1 -x sxhkd

# Show sxhkd help
super + F1
	dunstify -u low "Showing sxhkd help"; cat ~/.config/sxhkd/sxhkdrc | awk '/^[a-z]/; last \{print $0,"\t",last\} \{last=""\} /^#/\{last=$0\}' | column -t -s $'\t' | rofi -dmenu -i -no-show-icons -width 1000

### Function Keys ###
# ChangeVolume.sh
XF86Audio{LowerVolume,RaiseVolume,Mute}
	changeVolume.sh {down,up,mute}

XF86AudioPlay
	playerctl play-pause

XF86Audio{Prev,Next}
	playerctl {prev,next}

# ChangeBrightness.sh
XF86MonBrightness{Up,Down}
	changeBrightness.sh {up,down}

# Take a Screenshot of the whole screen
Print
	dunstify -u low "Taking a Screenshot" -i image-png; shotgun - | xclip -selection clipboard -t image/png  

# Take a screenshot of a selection
super + Print
	dunstify -u low "Taking a Screenshot" -i image-png; shotgun $(hacksaw -f "-i %i -g %g") - | xclip -selection clipboard -t image/png -i  

# Record a gif of a selection
super + alt + Print
	dunstify "Copying a 5s gif after 1s delay to Clipboard..." -t 5000 -i upload-pictures; giph $(hacksaw -f "-g %g")-l -c 1,1,1,0.3 -p 5 -d 1 -t 5 | xclip -selection clipboard -t image/gif -i

# Lock
ctrl + l
    i3lock -i "$HOME/Desktop/bridge.png"

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	dunstify -u medium "bswpm" '{quitting, restarting} bspwm'; systemctl --user {stop,restart} bspwm

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

control + alt + Delete
	bspc node -k

# alternate between the tiled and monocle layout
super + m
	dunstify -u medium "Switching between tiled and monocle"; bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# hide window
super + v
  bspc node -g hidden

# unhide window
super + shift + v
  bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off

# hide/unhide polybar
alt + p
    {polybar-msg cmd hide, polybar-msg cmd show}
#
# state/flags
#

# toggle fullscreen
super + f
    bspc node -t \~fullscreen

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

alt + bracket{left,right}
# cycle to the prev/next desktop for all monitors
    cycle_dir={prev,next}; \
    bspc desktop "$\{cycle_dir\}.local" -f; \
    for mon_id in $(bspc query -M -m '.!focused'); do \
        bspc desktop "$\{mon_id\}:focused#$\{cycle_dir\}.local" -a; \
    done

#
# preselect
#

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

